rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow managers and admins to read all users
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['manager', 'admin']);
    }
    
    // Allow users to read and write their own customers
    match /customers/{customerId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.createdBy;
      
      // Allow creation of new customers
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.createdBy;
        
      // Allow managers and admins to read all customers
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['manager', 'admin']);
    }
  }
} 